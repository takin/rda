<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.dewianjanimedia.rda.fragment.HomeFragment"
    android:background="@color/window_background"
    android:clickable="false">

    <!-- TODO: Update blank fragment layout -->


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/streamingButton"
        android:layout_gravity="center"
        android:src="@drawable/player_stop"
        android:background="#00ffffff"
        android:layout_below="@+id/homeTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_title"
        android:id="@+id/homeTitle"
        android:layout_gravity="top|center"
        android:textSize="15pt"
        android:layout_marginTop="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/base_color"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:id="@+id/streamingHint"
        android:layout_gravity="center_horizontal|bottom"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_horizontal"
        android:textSize="11dp"
        android:layout_below="@+id/streamingStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/streaming_status_off"
        android:id="@+id/streamingStatus"
        android:layout_gravity="center"
        android:layout_below="@+id/streamingButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="13dp"
        android:textColor="@color/alert_color"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/developer"
        android:id="@+id/developer"
        android:textSize="3pt"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/version_text"
        android:id="@+id/versionText"
        android:textSize="5pt"
        android:textColor="@color/version_color"
        android:layout_below="@+id/homeTitle"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

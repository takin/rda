<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_dark</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/accent_material_light</item>
        <!--<item name="textColorPrimary">@color/text_color_primary</item>-->
        <!--<item name="navigationBarColor">@color/navigation_bar_color</item>-->
        <!--<item name="windowBackground">@color/window_background</item>-->
        <item name="actionBarTabBarStyle">@style/AcionBarDivider</item>
    </style>

    <style name="AcionBarDivider" parent="AppTheme">
        <item name="android:divider">#FFFFFFFF</item>
    </style>

    <!-- Theme untuk splash screen -->
    <style name="AppTheme.splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/splash_screen_background</item>
    </style>

</resources>
